{
  "headers": [
    {
      "source": "/**",
      "headers": [
        {
          "key": "Set-Cookie",
          "value": "HttpOnly; Secure; SameSite=None"
        }
      ]
    }
  ],
  "hosting": [
    {
      "target": "auth-fln",
      "public": "Apps/Auth/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
