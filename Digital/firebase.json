{
  "headers": [
    {
      "source": "/**",
      "headers": [
        {
          "key": "Set-Cookie",
          "value": "HttpOnly; Secure; SameSite=None"
        }
      ]
    }
  ],
  "hosting": [
    {
      "target": "auth-ipel",
      "public": "Apps/Auth/dist",
      "ignore": [ "firebase.json", "**/.*", "**/node_modules/**" ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "user-ipel",
      "public": "Apps/User/dist",
      "ignore": [ "firebase.json", "**/.*", "**/node_modules/**" ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }, 
    {
      "target": "cms-ipel",
      "public": "Apps/Cms/dist",
      "ignore": [ "firebase.json", "**/.*", "**/node_modules/**" ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "survey-ipel",
      "public": "Apps/Survey/dist",
      "ignore": [ "firebase.json", "**/.*", "**/node_modules/**" ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "tracker-ipel",
      "public": "Apps/Tracker/dist",
      "ignore": [ "firebase.json", "**/.*", "**/node_modules/**" ],
      "rewrites": [
        {
          "source": "**",
